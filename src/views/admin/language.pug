    { name: 'code', type: 'text', isColumn: true, isField: true, label: 'Code' },
    { name: 'country', type: 'foreign', isColumn: true, isField: true, label: 'Country' },
    { name: 'updatedAt', type: 'date', isColumn: true, isField: false, label: 'Updated' },
