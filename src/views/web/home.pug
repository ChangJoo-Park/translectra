extends ../layout.pug

block content
  //- div(class='jumbotron mb-5')
  //-   h1(class='display-4' style='font-size: 2.5rem;') Hi Electran !
  //-   p(class='lead').
  //-     We are counting on you and the power of our amazing community to bring Electra to an even wider world.
  //-     You can easily help us achive that by translating our multiple projects in many languages.
  //-   hr(class='my-4')
  //-   p(class='lead text-right mb-0')
  //-     a(class='btn btn-success btn-lg' href='#' role='button') Start translating

  h2(class='no-select mb-3' style='font-size: 2rem;') Languages

  table(class='table mb-5 no-select' style='border-bottom: solid 1px #dee2e6;')
    thead
      th(scope='col') Name
      th(class='text-center' scope='col') New
      th(class='text-center' scope='col') In Progress
      th(class='text-center' scope='col') Accepted
      th(class='text-center' scope='col') Contributors
      th(scope='col')
    tbody
      each language in languages
        tr
          td #{language.name}
          td(class='text-center') 12/841
          td(class='text-center') 57/841
          td(class='text-center') 772/841
          td(class='text-center') 17
          td(class='text-right' style='padding: .5rem .75rem 0;')
            a(class='btn btn-primary btn-sm' href='/auth/login') Translate
        tr
          td(colspan='6' style='border-top: 0; padding-top: 0;')
            div(class='progress')
              div(
                class='progress-bar bg-danger'
                role='progressbar'
                style='width: 1.4%'
                aria-valuenow='1.4'
                aria-valuemin='0'
                aria-valuemax='100'
              )
              div(
                class='progress-bar bg-warning'
                role='progressbar'
                style='width: 6.8%'
                aria-valuenow='6.8'
                aria-valuemin='0'
                aria-valuemax='100'
              )
              div(
                class='progress-bar bg-success'
                role='progressbar'
                style='width: 91.8%'
                aria-valuenow='91.8'
                aria-valuemin='0'
                aria-valuemax='100'
              )

  h2(class='no-select mb-3' style='font-size: 2rem;') Projects

  table(class='table mb-5 no-select' style='border-bottom: solid 1px #dee2e6;')
    thead
      th(scope='col') Name
      th(class='text-center' scope='col') Version
      th(class='text-center' scope='col') New
      th(class='text-center' scope='col') In Progress
      th(class='text-center' scope='col') Accepted
      th(scope='col')
    tbody
      each project in projects
        tr
          td #{project.name}
          td(class='text-center') v1.1.0
          td(class='text-center') 12/841
          td(class='text-center') 57/841
          td(class='text-center') 772/841
          td(class='text-right' style='padding: .5rem .75rem 0;')
            a(class='btn btn-secondary btn-sm' href='#') Download
        tr
          td(colspan='6' style='border-top: 0; padding-top: 0;')
            div(class='progress')
              div(
                class='progress-bar bg-danger'
                role='progressbar'
                style='width: 1.4%'
                aria-valuenow='1.4'
                aria-valuemin='0'
                aria-valuemax='100'
              )
              div(
                class='progress-bar bg-warning'
                role='progressbar'
                style='width: 6.8%'
                aria-valuenow='6.8'
                aria-valuemin='0'
                aria-valuemax='100'
              )
              div(
                class='progress-bar bg-success'
                role='progressbar'
                style='width: 91.8%'
                aria-valuenow='91.8'
                aria-valuemin='0'
                aria-valuemax='100'
              )
